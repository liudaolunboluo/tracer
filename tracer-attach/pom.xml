    <artifactId>tracer-attach</artifactId>

    <name>${project.artifactId}</name>
    <url>https://github.com/liudaolunboluo/tracer</url>

    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
    </properties>

    <dependencies>
